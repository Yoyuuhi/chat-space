.message{data: {message: {id: message.id}}}
  .main_chat__message_list--user_info
    .main_chat__message_list--user_info--name
      = message.user.name
    .main_chat__message_list--user_info--time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main_chat__message_list--message
    - if message.content.present?
      = message.content
    = image_tag message.image.url, class: 'main_chat__message_list--image' if message.image.present?