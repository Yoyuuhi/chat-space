.side_bar
  .side_bar__user_name
    .side_bar__user_name--name_box
      .side_bar__user_name--name_box--name
        = current_user.name
      .side_bar__user_name--name_box--icon
        = link_to new_group_path, class: "side_bar__user_name--name_box--icon--btn" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user), class: "side_bar__user_name--name_box--icon--btn" do
          = icon('fas', 'cog')
  .side_bar__group_list
    - current_user.groups.each do |group|
      .side_bar__group_list--group_box
        = link_to '#' do
          .side_bar__group_list--group_box--name
            = group.name
          .side_bar__group_list--group_box--message
            まだメッセージがありません